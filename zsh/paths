# PATHS

if [[ "$(uname -m)" == "arm64" ]]; then
  export BREW_BIN="/opt/homebrew/bin/brew"
  export IBREW_BIN="/usr/local/bin/brew"
else
  export BREW_BIN="/usr/local/bin/brew"
  export IBREW_BIN="/usr/local/bin/brew"
fi

LOCAL_BIN_PATH="$HOME/.dotfiles/bin/$(uname)-$(uname -m)"

export PATH="$LOCAL_BIN_PATH:/opt/homebrew/sbin:/opt/homebrew/bin:/opt/homebrew/opt:/usr/local/bin:/usr/local/opt:$PATH"

# ENV
export EDITOR='nano'
export VISUAL=$EDITOR

export LC_ALL='en_US.UTF-8'
export LANG=$LC_ALL
export TERM="xterm-256color"

export LSCOLORS=GxFxCxDxBxegedabagaced
export CLICOLOR=true
autoload -U colors && colors

export HOMEBREW_NO_ANALYTICS=1
export MANPAGER='less -X'
